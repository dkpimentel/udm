#Va até o diretório e inicie/crie o git na pasta
git init

#Configurações globais
git config --global user.name "David Kenny"
git config --global user.email contato@webproinfo.com

#Definir o editor padrão
git config --global core.editor emacs

#Verificando minhas configurações
git config --list


#Adicionando um repositório
git remote add origin https://github.com/dkpimentel/carteirinhacpx.git

#Para saber qual url do repositório está configurado
git remote -v

#Remover o repositório
git remote rm origin

#Para enviar os arquivos para o git
git push -u origin master

#Para pegar os arquivos do git
git pull origin master


#Acertando erro “fatal: refusing to merge unrelated histories” - Permitindo histórias não relacionadas
git pull origin master --allow-unrelated-histories



