#Inicitar o git
git init

#Configurações globais
git config --global user.name "David Kenny"
git config --global user.email contato@webproinfo.com
git config --global credential.https://github.com.username dkpimentel

#Verificando minhas configurações
git config --list
git config --global --edit

#Ativando o cache para guardar user e senha
git config credential.helper store
$ git push https://github.com/repo.git

Username for 'https://github.com': <USERNAME>
Password for 'https://USERNAME@github.com': <PASSWORD>

#Adicionando um repositório
git remote add origin <<nome do repositório>>

#Verificando as configurações do repositório
git remote -v

#Removendo um repositório
git remote rm origin

#Carregar arquivos do git
git pull origin <<branch>>

#Para enviar arquivos para o git
git push --tags origin <<branch>>

#Para criar um novo branch
git checkout <<tag>> -b <<novo branch>>

#Para excluir um branch

#Para renomear um branch
git branch -m <<Atual>> <<Novo>>

#Para criar uma nova tag
git tag -a <<tag>> <<id branch>> 

#Para excluir uma tag
git tag -d <<tag>>

#Para verificar as mudanças
git show <<id branch>> ou <<tag>>

#Para alternar entre tags e branch
git checkout <<tag>> ou <<branch>>

#Para juntar os branchs
Preciso está no branch estável
git merge <<branch>>

#Acertando erro “fatal: refusing to merge unrelated histories” - Permitindo histórias não relacionadas
git pull origin master --allow-unrelated-histories



